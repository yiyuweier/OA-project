<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.oa.bean">

	<class name="Department" table="oa_department">
		<id name="id" type="long">
			<generator class="native"/>
		</id>
		<property name="D_name"/>	
		<property name="D_description"/>
		
		<!-- users属性，Department与User的一对多关系 -->
		<set name="users">
			<key column="departmentId"></key>
			<one-to-many class="User"></one-to-many>
		</set>
		
		<!-- parent属性，Department与Department（上级）的多对一关系  -->
		<many-to-one name="parent" class="Department" column="parentId"></many-to-one>
		
		<!-- childrens属性，Department与Department（下级）的一对多关系 -->
		<set name="childrens" cascade="delete">
			<key column="parentId"></key>
			<one-to-many class="Department"></one-to-many>
		</set>
		
			
	</class>

</hibernate-mapping>

